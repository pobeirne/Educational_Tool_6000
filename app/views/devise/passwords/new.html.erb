<% title "Password Reset" %>

<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">Password Reset</h1>
	</div>
</div>
<div class="row">
	<div class="col-sm-6 col-md-4 col-md-offset-4 ">

		<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal' , method: :post }) do |f| %>
		<%= devise_error_messages! %>

		<h4 class="text-center">Please enter your email to recive instructions</h4>

		<div class="form-group">
			<%= f.email_field :email, autofocus: true , class: "form-control" , placeholder: "Email" %>
		</div>

		<div class="form-group">
			<%= f.submit "Send me reset password instructions", class: 'btn btn-success btn-block' %>
		</div>

		<div class="form-group">
			<p style="text-align: center">
				Or
			</p>
			<%= render "devise/shared/links" %>
		</div>

		<% end %>
	</div>
</div>
<!-- /.row -->
