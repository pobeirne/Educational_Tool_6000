<%- model_class = Result -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:num_correct) %>:</strong></dt>
  <dd><%= @result.num_correct %></dd>
  <dt><strong><%= model_class.human_attribute_name(:num_incorrect) %>:</strong></dt>
  <dd><%= @result.num_incorrect %></dd>
  <dt><strong><%= model_class.human_attribute_name(:grade) %>:</strong></dt>
  <dd><%= @result.grade %></dd>
  <dt><strong><%= model_class.human_attribute_name(:duration) %>:</strong></dt>
  <dd><%= @result.duration %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @result.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:quiz_id) %>:</strong></dt>
  <dd><%= @result.quiz_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              results_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_result_path(@result), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              result_path(@result),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
