<% title "User Overview" %>

<!-- Page Heading -->
<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">User Overview</h1>
	</div>
</div>
<!-- /.row -->
<div class="row">

	<div class="col-lg-3 col-md-4 col-sm-12">
		<div class="thumbnail">
			<img src="<%= @profile.avatar_url %>" alt="">
		</div>
	</div>

	<div class="col-lg-5 col-md-4 col-sm-12">
		
        <ul class="list-group">
        	<li class="list-group-item">
				<h4>Details</h4>
			</li>
			<li class="list-group-item">
				Username: <%= @profile.user_name%>
			</li>
			<li class="list-group-item">
				College : <%= @profile.college_name %>
			</li>
			<li class="list-group-item">
				Course  : <%= @profile.course_name %>
			</li>
			<li class="list-group-item">
				Year    : <%= @profile.year %>
			</li>
			<li class="list-group-item">
				Level   : <%= @profile.level_id %>
			</li>
		</ul>
	</div>
	<div class="col-lg-4 col-md-4 col-sm-12">		
		
        <ul class="list-group">
        	<li class="list-group-item">
				<h4>Stats</h4>
			</li>
			<li class="list-group-item">
				Username: <%= @profile.user_name%>
			</li>
			<li class="list-group-item">
				College : <%= @profile.college_name %>
			</li>
			<li class="list-group-item">
				Course  : <%= @profile.course_name %>
			</li>
			<li class="list-group-item">
				Year    : <%= @profile.year %>
			</li>
			<li class="list-group-item">
				Level   : <%= @profile.level_id %>
			</li>
		</ul>
	</div>
</div>

<div class="row">
	<div class="col-lg-12">
		<p class="navbar-text pull-right">		
			<%= link_to "Edit Profile", edit_profile_path(current_user.id) %>
		</p>
	</div>
</div>

<div class="row">
	<div class="col-lg-12">
		<h3 class="page-header"> Features</h3>
	</div>
</div>
  <div class="row">
	<div class="col-lg-12">
		<div class="btn-group btn-group-justified" role="group" aria-label="...">
			<div class="btn-group" role="group">
				<button type="button" class="btn btn-default">
					Take Assesment
				</button>
			</div>
			<div class="btn-group" role="group">
				<button type="button" class="btn btn-default">					
					Start Quiz
				</button>
			</div>
			<div class="btn-group" role="group">
				<button type="button" class="btn btn-default">					
					My Results
				</button>
			</div>
			<div class="btn-group" role="group">
				<button type="button" class="btn btn-default">					
					My Account settings
				</button>
			</div>
		</div>
	</div>


