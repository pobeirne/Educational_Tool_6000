<h1>Listing quizzes</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>User</th>
      <th>Is attempted</th>
      <th>Is complete</th>
      <th>Num of questions</th>
      <th>Category</th>
      <th>Level</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quizzes.each do |quiz| %>
      <tr>
        <td><%= quiz.title %></td>
        <td><%= quiz.description %></td>
        <td><%= quiz.user %></td>
        <td><%= quiz.is_attempted %></td>
        <td><%= quiz.is_complete %></td>
        <td><%= quiz.num_of_questions %></td>
        <td><%= quiz.category %></td>
        <td><%= quiz.level %></td>
        <td><%= link_to 'Show', quiz %></td>
        <td><%= link_to 'Edit', edit_quiz_path(quiz) %></td>
        <td><%= link_to 'Destroy', quiz, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

